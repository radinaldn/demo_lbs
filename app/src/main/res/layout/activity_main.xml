<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inkubator.radinaldn.demolbs.activity.MainActivity"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:text="Pesan Makanan @SMART AMPERA"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"

        >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etmakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kegiatan"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Makanan . eg: Nasi goreng"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:inputType="number"
                android:id="@+id/etporsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_people_black"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Porsi. eg: 5"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:inputType="textMultiLine"
                android:id="@+id/etket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/subtitles"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="Keterangan (catatan). eg: Gak pake sambel"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <android.support.design.widget.TextInputEditText
                    android:inputType="textMultiLine"
                    android:id="@+id/etlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:hint="latitude"
                    android:singleLine="true"
                    android:layout_weight="0.39"/>

            <android.support.design.widget.TextInputEditText
                android:inputType="textMultiLine"
                android:id="@+id/etlng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTint="@color/colorPrimaryDark"
                android:hint="longitude"
                android:singleLine="true"
                android:layout_weight="0.39"/>


        </LinearLayout>

        <!--<android.support.design.widget.TextInputEditText-->
            <!--android:id="@+id/etalt"-->
            <!--android:hint="altitude"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFF"
                android:id="@+id/btkirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="KIRIM" />
            <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "/>

            <Button
                android:background="#dfdddd"
                android:id="@+id/btbatal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.39"
                android:text="BATAL" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
